{% extends 'base.html.twig' %}
{% block body %}
<div class="container border">
    <h1>dodaj osobe</h1>

    <div class="  border">
        {{ form_start(form) }}

            <div class="form-group">
                <label class="">imie:</label>
                {{ form_widget (form.name) }}
